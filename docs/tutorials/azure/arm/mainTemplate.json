{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Creates Prowler custom roles across subscriptions. App Registration must be created separately."
  },
  "parameters": {
    "subscriptionIds": {
      "type": "array",
      "metadata": {
        "description": "Array of subscription IDs where Prowler should have access"
      }
    },
    "customRoleName": {
      "type": "string",
      "defaultValue": "ProwlerRole",
      "metadata": {
        "description": "Name for the custom role"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[deployment().location]",
      "metadata": {
        "description": "Location for deployments"
      }
    }
  },
  "variables": {
    "customRoleDescription": "Role used for checks that require read-only access to Azure resources and are not covered by the Reader role",
    "customRoleActions": [
      "Microsoft.Web/sites/host/listkeys/action",
      "Microsoft.Web/sites/config/list/Action"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('prowler-role-', parameters('subscriptionIds')[copyIndex()])]",
      "subscriptionId": "[parameters('subscriptionIds')[copyIndex()]]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "roleDeploymentLoop",
        "count": "[length(parameters('subscriptionIds'))]"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "roleName": {
              "type": "string"
            },
            "roleDescription": {
              "type": "string"
            },
            "roleActions": {
              "type": "array"
            }
          },
          "variables": {
            "roleDefName": "[guid(subscription().id, parameters('roleName'))]"
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/roleDefinitions",
              "apiVersion": "2022-04-01",
              "name": "[variables('roleDefName')]",
              "properties": {
                "roleName": "[parameters('roleName')]",
                "description": "[parameters('roleDescription')]",
                "type": "CustomRole",
                "permissions": [
                  {
                    "actions": "[parameters('roleActions')]",
                    "notActions": [],
                    "dataActions": [],
                    "notDataActions": []
                  }
                ],
                "assignableScopes": [
                  "[subscription().id]"
                ]
              }
            }
          ],
          "outputs": {
            "roleDefinitionId": {
              "type": "string",
              "value": "[subscriptionResourceId(parameters('subscriptionIds')[copyIndex()], 'Microsoft.Authorization/roleDefinitions', variables('roleDefName'))]"
            }
          }
        },
        "parameters": {
          "roleName": {
            "value": "[parameters('customRoleName')]"
          },
          "roleDescription": {
            "value": "[variables('customRoleDescription')]"
          },
          "roleActions": {
            "value": "[variables('customRoleActions')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "deploymentInfo": {
      "type": "object",
      "value": {
        "message": "Custom roles created successfully. Complete setup requires additional steps.",
        "subscriptionsConfigured": "[parameters('subscriptionIds')]",
        "customRoleName": "[parameters('customRoleName')]",
        "nextSteps": {
          "1": "Create App Registration using Azure CLI or Portal",
          "2": "Use the provided complete-setup.sh script for full automation",
          "command": "cd ../scripts && ./setup-prowler.sh"
        }
      }
    },
    "roleDefinitionIds": {
      "type": "array",
      "copy": {
        "count": "[length(parameters('subscriptionIds'))]",
        "input": "[reference(concat('prowler-role-', parameters('subscriptionIds')[copyIndex()])).outputs.roleDefinitionId.value]"
      }
    }
  }
}